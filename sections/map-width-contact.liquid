
{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .embed-warpper{
    padding:52px;
    background-color: #5D1619;
  }

  .embed-container iframe {
    max-width: 100%;
    border: 0;
  padding: 50px;
  background: #82282A;

  border: 0;
  outline: 0;
  box-shadow: none;

  margin: auto;
  display: block;
   
  }

  .embed-title {
    margin-top: 20px;
  font-size: 22px;
  color: #fff;
  font-weight: 600;
  font-family: "Anybody", sans-serif !important;
  text-align: center;
  }

  .schedule-block {
   display: flex;
  justify-content: space-between;
  font-size: 26px;
  font-weight: 300;
  }

.time-table{
    max-width:540px;
    margin:0 auto;
}


.time-table ul{
    padding:20px; width:100%; 
    background-color: #5D1619;
    color:#fff;
}

.embed-title_2{
    text-align:center;
}

{% endstyle %}


<div class="section-{{ section.id }}-padding">
  <div class="page-width page-width-full p-0">
    <div class="image-with-text__grid grid grid--gapless grid--1-col grid--2-col-tablet">
      
      <!-- First Column: Embed Code and Title -->
      <div class="grid__item">


      <div class="embed-warpper">

        {% if section.settings.embed_code != blank %}

          <div class="embed-container">
            {{ section.settings.embed_code }}
          </div>
        {% endif %}
        {% if section.settings.title != blank %}
          <h2 class="embed-title">{{ section.settings.title }}</h2>
        {% endif %}
        </div>
      </div>

      <!-- Second Column: Blocks as list -->
      <div class="grid__item">

      <div class="time-table">

         {% if section.settings.title_2 != blank %}
          <h2 class="embed-title_2">{{ section.settings.title_2 }}</h2>
        {% endif %}


        <ul class="list-unstyled">
         
            
          {% for block in section.blocks %}
            {% if block.type == 'schedule' %}
              <li class="schedule-block" {{ block.shopify_attributes }}>
                <strong>{{ block.settings.day }}</strong> <strong> {{ block.settings.time }}</strong>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
</div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Embed and Schedule List",
  "class": "section",
  "settings": [
    {
      "type": "textarea",
      "id": "embed_code",
      "label": "Embed Code"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title below embed"
    },
     {
      "type": "text",
      "id": "title_2",
      "label": "Title Second"
    },

    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "schedule",
      "name": "Schedule Block",
      "settings": [
        {
          "type": "text",
          "id": "day",
          "label": "Day"
        },
        {
          "type": "text",
          "id": "time",
          "label": "Time"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Embed with List"
    }
  ]
}
{% endschema %}
