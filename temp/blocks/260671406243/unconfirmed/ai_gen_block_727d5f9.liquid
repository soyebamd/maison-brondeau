{% doc %}
  @prompt
    Create a collection list section that displays products from a 'Free Tastings' collection with product images, titles, and a button to view details

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .free-tastings-{{ ai_gen_id }} {
    margin: {{ block.settings.margin_top }}px 0 {{ block.settings.margin_bottom }}px 0;
  }

  .free-tastings-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: 30px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
  }

  .free-tastings-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .free-tastings-card-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    height: 100%;
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
    background-color: {{ block.settings.card_background_color }};
  }

  .free-tastings-card-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
  }

  .free-tastings-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    padding-bottom: 100%;
    overflow: hidden;
  }

  .free-tastings-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .free-tastings-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .free-tastings-image-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
  }

  .free-tastings-content-{{ ai_gen_id }} {
    padding: 20px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .free-tastings-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    margin-bottom: 10px;
    color: {{ block.settings.title_color }};
  }

  .free-tastings-button-{{ ai_gen_id }} {
    display: inline-block;
    margin-top: auto;
    padding: 10px 20px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    text-align: center;
    transition: background-color 0.3s ease;
  }

  .free-tastings-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .free-tastings-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px;
    background-color: #f4f4f4;
    border-radius: 8px;
  }

  @media screen and (max-width: 749px) {
    .free-tastings-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }
    
    .free-tastings-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
    
    .free-tastings-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="free-tastings-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="free-tastings-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {% endif %}

  {% if block.settings.collection != blank %}
    {% assign collection = block.settings.collection %}
    {% if collection.products.size > 0 %}
      <div class="free-tastings-grid-{{ ai_gen_id }}">
        {% for product in collection.products limit: block.settings.products_to_show %}
          <div class="free-tastings-card-{{ ai_gen_id }}">
            <div class="free-tastings-image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img 
                  src="{{ product.featured_image | image_url: width: 500 }}" 
                  alt="{{ product.featured_image.alt | escape }}" 
                  loading="lazy" 
                  width="{{ product.featured_image.width }}" 
                  height="{{ product.featured_image.height }}" 
                  class="free-tastings-image-{{ ai_gen_id }}"
                >
              {% else %}
                <div class="free-tastings-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-apparel-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            <div class="free-tastings-content-{{ ai_gen_id }}">
              <h3 class="free-tastings-title-{{ ai_gen_id }}">{{ product.title }}</h3>
              <a href="{{ product.url }}" class="free-tastings-button-{{ ai_gen_id }}">{{ block.settings.button_label }}</a>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="free-tastings-empty-{{ ai_gen_id }}">
        <p>No products found in this collection</p>
      </div>
    {% endif %}
  {% else %}
    <div class="free-tastings-empty-{{ ai_gen_id }}">
      <p>Please select a collection</p>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Free Tastings",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Free Tastings"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Maximum products to show"
    },
    {
      "type": "text",
      "id": "button_label",
