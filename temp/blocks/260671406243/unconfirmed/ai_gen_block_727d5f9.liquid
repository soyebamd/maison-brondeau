    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "button_border_radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 4,
      "unit": "px",
      "label": "Button border radius"
    }
  ],
  "presets": [
    {
      "name": "Free Tastings"
    }
  ]
}
{% endschema %}